<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/system_name"
        android:layout_width="343dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="33dp"
        android:text="Marketplace"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/system_currency"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/system_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="263dp"
        android:text="Your currency:" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/system_currency"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/listDivider" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="332dp"
        android:background="#000000"
        android:scrollbars="vertical"
        android:showDividers="middle|beginning|end">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/null"
            android:layout_alignEnd="@+id/null"
            android:layout_margin="1dp"
            android:background="#FFFFFF">
            ...
        </TableRow>
    </TableLayout>

</RelativeLayout>